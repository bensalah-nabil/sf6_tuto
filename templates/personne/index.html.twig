{% extends 'template.html.twig' %}

{% block title %}Liste des personnes{% endblock %}

{% block body %}
    <div class="row"></div>
    {% for personne in  personnes %}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{ personne.name }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{ personne.firstname }} {{ personne.name }}</h6>
                <p class="card-text">Age : {{ personne.age }} </p>
                <p class="card-text"> {{ personne.address }} </p>
                <a href="{{ path('personne.detail', {id: personne.id}) }}" class="card-link">Details</a>
                <a href="{{ path('personne.delete', {id: personne.id}) }}" class="card-link">Delete</a>
            </div>
        </div>
    {% endfor %}
    </div>
    {%  if isPaginated %}
        <div class="row mt-2">
            <nav aria-label="col Page navigation example">
                <ul class="pagination">
                    {% if page != 1 %}
                        <li class="page-item"><a class="page-link"
                         href="href="#{{ path('personne.list.all', { page: page - 1, nber: nber }) }}">
                            Previous
                            </a></li>
                    {% endif %}
                    {% for i in range(1, nbPage) %}
                        <li class="page-item"><a class="page-link"
                           href="#{{ path('personne.list.all', { page: i, nber: nber }) }}">
                                {{ i }}
                            </a></li>
                    {% endfor %}
                    {% if page != nbPage %}
                        <li class="page-item"><a class="page-link"
                                                 href="href="#{{ path('personne.list.all', { page: page + 1, nber: nber }) }}">
                            Next
                            </a></li>
                    {% endif %}
                </ul>
            </nav>
        </div>

    {% endif %}
{% endblock %}
