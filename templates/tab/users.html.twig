{% extends 'template.html.twig' %}


{% block pageTitle %}
    Users
{% endblock %}
{% block  bodyPage %}
{{ include('fragments/date.jour.html.twig')}}
<table class="table">
        <tr class="table-active">
            <td>Firstname</td>
            <td>Name</td>
            <td>Age</td>
            <td>Mesg</td>
        </tr>
        {% for user in users %}
            <tr class="table-{% if loop.index is odd %}danger{% else %}warning{% endif %}">
                <td>{{ user.firstname }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.age }}</td>
                <td>
                     {{ render(controller('App\\Controller\\FirstController::sayHello',{firstname: user.nom})) }}
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}